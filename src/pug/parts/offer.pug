// OFFER section 

section.offer.bg-secondary#offer
	.container
		.offer__block.offer-block.offer-block_calc-bg
			h2.offer__title Оставьте заявку на расчёт
			|
			|
			span.offer__subtitle и получите скидку 30% на изготовление скинали или фартука для кухни
			// form
			form.form.offer__form(action="#")
				.form__row
					.form__group
						label.form__label(for="") Вид стекла
						// "select"
						input(type="hidden" name="type" id="select-type" value="С печатью")
						.select.form__select
							.select_checked С печатью
							ul.select__dropdown
								li.select__option(data-value="С печатью") С печатью
								li.select__option(data-value="Без печати") Без печати
						// ./"select"
					.form__group
						label.form__label(for="") Ширина см.
						input.input.form__input(type="text")
					.form__group
						label.form__label(for="") Высота см.
						input.input.form__input(type="text")
				// ./form-row
				.form__row.form__row-checkbox
					.form__checkbox
						input.checkbox(type="checkbox", name="" id="install")
						label.checkbox-label(for="install") Монтаж
					.form__checkbox
						input.checkbox(type="checkbox", name="" id="delivery")
						label.checkbox-label(for="delivery") Доствка

				// ./form-row
				.form__row
					.form__group
						input.form__input.input(type="text" placeholder="Ваше имя")
					.form__group
						input.form__input.input(type="tel" placeholder="Ваш телефон")
					.form__group
						input.button.form__button(type="submit" value="Получить скидку")
				// ./form-row

			// ./form






// ./OFFER section 